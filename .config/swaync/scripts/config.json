    "notification-visibility": {
        "example-name": {
            "state": "muted",
            "urgency": "Low",
            "app-name": "Spotify"
        }
    },

    "widgets": [
        "mpris",
        "inhibitors",
        "title",
        "notifications",
        "dnd"
    ],


    "widget-config": {
        "inhibitors": {
            "text": "Inhibitors",
            "button-text": "Clear All",
            "clear-all-button": true
